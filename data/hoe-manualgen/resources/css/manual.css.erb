@import url(baseline.compress.css);

#page {
	margin: 0 auto;
}

#page > header {
	position: relative;
	background-color: #e6eef7;
	background: -webkit-gradient(radial, 
		20% 0, 0, 
		20% 0, 800, 
		color-stop(0.0,#e6eef7), 
		color-stop(1.0,#a6aeb7));
	background: -moz-radial-gradient(
		20% top, 
		farthest-side, 
		#c6ced7, 
		#a6aeb7);
	color: white;
	padding: 0.4em 1em;
}

